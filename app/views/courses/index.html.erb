<h1>Index</h1>

<% @courses.each do |course| %>
<section id='course-<%=course.id%>'>
    <h3><%= course.name %></h3>
    <% course.course_students.sorted_grades.each do |course_student| %>
    <%= course_student.student.name %>
    <%= course_student.grade %> </br>
    <% end %>
  </section>
<% end %>
